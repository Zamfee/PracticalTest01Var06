<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01Var06MainActivity">


    <EditText
        android:id="@+id/textBox3"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="288dp"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/textBox2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textBox1"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="288dp"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textBox2"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="288dp"
        android:ems="10"
        android:inputType="text"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/textBox1"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/firstBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="hold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox1" />

    <CheckBox
        android:id="@+id/secondBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="28dp"
        android:text="hold"
        app:layout_constraintStart_toEndOf="@+id/firstBox"
        app:layout_constraintTop_toBottomOf="@+id/textBox2" />

    <CheckBox
        android:id="@+id/thirdBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:text="hold"
        app:layout_constraintStart_toEndOf="@+id/secondBox"
        app:layout_constraintTop_toBottomOf="@+id/textBox3" />

    <Button

        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="488dp"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:text="Go to Second Activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton" />
</androidx.constraintlayout.widget.ConstraintLayout>